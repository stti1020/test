@using System.Collections.Generic
@using Microsoft.AspNet.Http
@using Microsoft.AspNet.Http.Authentication
@model LoginViewModel
@inject SignInManager<User> SignInManager

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Flottenmanagement Web App</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/$lib_bower/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/$lib_bower/font-awesome/css/font-awesome.css" />
        <link rel="stylesheet" href="~/styles/css/style.css" asp-append-version="true" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/lib/$lib_bower/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/lib/$lib_bower/font-awesome/css/font-awesome.min.css" />
        <link rel="stylesheet" href="~/styles/css/style.css" asp-append-version="true" />
    </environment>

    @Html.ApplicationInsightsJavaScript(TelemetryConfiguration)
</head>
<body class="gray-bg">

    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>
            <div>
                <h1 class="logo-name">FM</h1>
            </div>
            <h3>Willkommen</h3>
            <p>Bitte melden Sie sich an.</p>
            <form class="m-t" asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" role="form">
                <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Email" type="email" class="form-control" placeholder="EMail" required="">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Passwort" required="">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Anmelden</button>

                @*<a href="#"><small>Passwort vergessen?</small></a>*@
                <p class="text-muted text-center"><small>Sie haben noch keinen Account?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="@Url.Action("Register", "Account")">Registrieren</a>
            </form>
        </div>
    </div>
</body>
</html>
